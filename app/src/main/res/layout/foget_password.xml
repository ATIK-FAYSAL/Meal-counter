<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/rLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar1"
        android:background="@drawable/text_style4"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">


        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/bContinue"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtPhoneNumber"
            android:layout_marginTop="55dp"
            android:background="@drawable/text_style3"
            android:ems="10"
            android:gravity="center"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/offWhite"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/eFavourite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/txtUserName"
            android:layout_alignStart="@+id/txtPhoneNumber"
            android:layout_below="@+id/userNameErr"
            android:background="@drawable/text_style3"
            android:ems="10"
            android:gravity="center"
            android:hint="Favourite Word"
            android:inputType="textPersonName"
            android:textColorHint="@color/offWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bContinue"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPhoneNumber"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/button2"
            android:drawableRight="@drawable/right_icon"
            android:text="Continue"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/bContinue"
            android:layout_alignStart="@+id/bContinue"
            android:layout_below="@+id/fWordErr"
            android:background="@drawable/text_style3"
            android:ems="10"
            android:gravity="center"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="@color/offWhite" />


        <TextView
            android:id="@+id/userNameErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtUserName"
            android:textColor="@color/red"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/fWordErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/userNameErr"
            android:layout_below="@+id/eFavourite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/phoneErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fWordErr"
            android:layout_below="@+id/txtPhoneNumber"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/red"/>


    </RelativeLayout>
</RelativeLayout>
