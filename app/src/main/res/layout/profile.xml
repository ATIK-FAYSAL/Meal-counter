<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color2"
            android:elevation="4dp" />

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar1"
            android:background="@drawable/background2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/appLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                app:civ_border_color="#000" />

            <TextView
                android:id="@+id/eUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:hint="userName"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="155dp"
            android:background="#fafafa">


            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:text="Taka"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTaka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/icon_taka"
                        android:gravity="center"
                        android:hint=" 2500"
                        android:textColor="@color/color2"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="Group"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:hint="Toma"
                        android:textColor="@color/color2"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout3"
            android:background="@color/white">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/eName"
                android:text="Name"
                android:textColor="#E91E63"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/eName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@id/nameText"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#fff"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:hint="user name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/eEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ePhone"
                android:layout_alignStart="@+id/ePhone"
                android:layout_below="@+id/eName"
                android:layout_marginTop="11dp"
                android:backgroundTint="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/icon_email"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/icon_phone"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:hint="Phone"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/eAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ePhone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/icon_address"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/eFaWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fff"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:hint="Favourite word"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/eFaWord"
                android:layout_below="@+id/eAddress"
                android:layout_marginTop="13dp"
                android:text="Favourite word "
                android:textColor="#E91E63"
                android:textSize="18dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/eDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/icon_bold"
            android:ems="10"
            android:gravity="left"
            android:textColor="#808B96"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/eDate"
            android:layout_alignStart="@+id/eDate"
            android:layout_below="@+id/eDate"
            android:layout_marginTop="22dp"
            android:background="@drawable/button1"
            android:text="Edit"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
