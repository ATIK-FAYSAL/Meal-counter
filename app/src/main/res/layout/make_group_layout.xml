<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color8">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:indeterminate="true"
            android:visibility="invisible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/progress"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/groupName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/log_in_textstyle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Group name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/gId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/groupName"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/log_in_textstyle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Group Id"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/gAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/gId"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/log_in_textstyle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/bCreate"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fTime"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button2"
                    android:text="Create Now"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/gDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/gAddress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/text_style4"
                    android:ems="10"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:hint="Short Description"
                    android:inputType="textMultiLine"
                    android:lines="15"/>


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gDescription"
                    android:layout_alignTop="@+id/radio"
                    android:layout_marginTop="50dp"
                    android:text="Group Type"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gDescription"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/text">

                    <RadioButton
                        android:id="@+id/rPublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:onClick="chooseGroupType"
                        android:text="Public"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/rClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:onClick="chooseGroupType"
                        android:text="Close"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/rSecret"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:onClick="chooseGroupType"
                        android:text="Secret"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </RadioGroup>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/bCreate"
                    android:layout_below="@+id/radio"
                    android:layout_marginTop="33dp"
                    android:text="Fixed Time"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/fTime"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignEnd="@+id/radio"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/textView2"
                    android:background="@drawable/button2"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="12:00"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color2" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>



</RelativeLayout>
