<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.atik_faysal.mealcounter.HomePageActivity"
    tools:showIn="@layout/app_bar_home_page">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="25dp"
        app:backgroundTint="@color/color1"
        android:src="@drawable/icon_add"
        app:fabSize="normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refreshLayout"
            android:layout_below="@+id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/abc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background1">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/rlayout3"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:hint="date"
                            android:paddingLeft="15dp"/>

                        <LinearLayout
                            android:layout_below="@id/txtDate"
                            android:id="@+id/rlayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Total Cost"
                                android:textColor="#9E9E9E"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTaka"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_taka"
                                android:drawablePadding="6dp"
                                android:hint="total taka"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rlayout3"
                            android:layout_below="@id/rlayout2"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Meal"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:gravity="start"
                                android:layout_marginLeft="20dp"
                                android:textColor="#9E9E9E"/>
                            <TextView
                                android:id="@+id/txtMeal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:hint="Total meal"
                                android:paddingLeft="6dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rlayout4"
                            android:layout_below="@id/rlayout3"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Today's Meal"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:gravity="start"
                                android:layout_marginLeft="20dp"
                                android:textColor="#9E9E9E"/>
                            <TextView
                                android:id="@+id/txtTmeal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:hint="Total meal"
                                android:paddingLeft="6dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rlayout5"
                            android:layout_below="@id/rlayout4"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="25dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="My Meal"
                                android:textColor="#9E9E9E"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtMmeal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:hint="My meal"
                                android:paddingLeft="6dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtSession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="49dp"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:hint="Current session"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/abc"
                        android:layout_marginTop="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/linLay1">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView1"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/white"
                                android:onClick="onButtonClick">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="16dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image1"
                                        android:layout_width="60dp"
                                        android:layout_height="70dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_input" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/image1"
                                        android:layout_marginTop="30dp"
                                        android:gravity="center"
                                        android:text="Input meal"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView2"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                android:onClick="onButtonClick">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image2"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_meal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/image2"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:text="Balance"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/linLay2"
                            android:layout_below="@+id/linLay1">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView3"
                                android:clickable="true"
                                android:onClick="onButtonClick"
                                app:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image3"
                                        android:layout_width="80dp"
                                        android:layout_height="70dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="20dp"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_cost" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="15dp"
                                        android:gravity="center"
                                        android:text="Cost"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView4"
                                android:clickable="true"
                                android:onClick="onButtonClick"
                                app:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image4"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="15dp"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_shopping" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginBottom="15dp"
                                        android:gravity="center"
                                        android:text="Shopping list"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/linLay3"
                            android:layout_below="@+id/linLay2">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView5"
                                android:clickable="true"
                                android:onClick="onButtonClick"
                                app:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image5"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="15dp"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_schedule" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginBottom="15dp"
                                        android:gravity="center"
                                        android:text="Schedule"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView6"
                                android:clickable="true"
                                android:onClick="onButtonClick"
                                app:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image6"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="15dp"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_notice" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="14dp"
                                        android:gravity="center"
                                        android:text="Notice"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/linLay4"
                            android:layout_below="@+id/linLay3">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardView7"
                                android:clickable="true"
                                android:onClick="onButtonClick"
                                app:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image7"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="15dp"
                                        android:onClick="onButtonClick"
                                        android:src="@drawable/icon_report" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="14dp"
                                        android:gravity="center"
                                        android:text="Report"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>

</RelativeLayout>
