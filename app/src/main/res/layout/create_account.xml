<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Registration"
            android:textColor="#90A4AE"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#17C89A"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView3" />


        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Jhone Cena"
            android:inputType="textPersonName"
            android:textColor="#90A4AE"
            android:textSize="18dp"
            android:backgroundTint="#90A4AE"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#17C89A"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView4" />


        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Jhone@example.com"
            android:inputType="textPersonName"
            android:textColor="#90A4AE"
            android:textSize="18dp"
            android:backgroundTint="#90A4AE"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:layout_below="@+id/layout3"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#17C89A"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView5" />


        <EditText
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Dhaka"
            android:inputType="textPersonName"
            android:textColor="#90A4AE"
            android:textSize="18dp"
            android:backgroundTint="#90A4AE" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout5"
        android:layout_below="@+id/layout4"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#17C89A"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView6" />


        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textSize="18dp"
            android:backgroundTint="#90A4AE"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:drawableRight="@drawable/right_icon"
        android:gravity="center"
        android:text="PROCEED"
        android:textColor="#06EDF5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textColor="#9AB6B7"
        android:text="Have account ?Sign In" />


</RelativeLayout>
