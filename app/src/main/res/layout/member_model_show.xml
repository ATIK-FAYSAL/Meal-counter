<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/offWhite"
            android:focusable="false"
            android:gravity="center"
            android:hint="userName"
            android:textColor="@color/userName"
            android:textSize="22dp"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginTop="7dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offWhite"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/icon_name"
            android:drawableTint="@color/color2"
            android:gravity="center"
            android:hint="user name"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_phone"
            android:gravity="center"
            android:hint="phone number"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPhone"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="date"
            android:textColor="@color/offWhite"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:hint="Type/request id"
            android:padding="5dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/txtTaka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPhone"
            android:layout_alignStart="@+id/txtType"
            android:drawablePadding="5dp"
            android:hint="taka/status"
            android:textSize="15dp"
            android:padding="5dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offWhite"
            android:layout_below="@+id/txtDate"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/bRemove"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/color2"
                android:textSize="20dp" />
            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/offWhite"
                android:layout_below="@+id/txtTaka"/>
            <Button
                android:id="@+id/bDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="20dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="@color/color2"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
