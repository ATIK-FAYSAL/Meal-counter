<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Atik faysal"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="67dp"
                android:layout_toStartOf="@+id/bEdit"
                android:textSize="20dp"
                android:hint="cost id"
                android:textColor="@color/color1"
                android:text="#P10001"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lini1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout1"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:text="01-03-2018"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtTaka"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:text="1792"
                android:textSize="17dp"
                android:drawableLeft="@drawable/icon_taka"
                android:drawablePadding="8dp"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/bEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lini1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:src="@drawable/icon_edit"
            android:tint="@color/color2" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
