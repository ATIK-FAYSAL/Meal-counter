<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:background="@drawable/img"
    android:id="@+id/layout1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/logo"
                    app:civ_border_color="#000" />

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUploadPhoto"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:hint="userName"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/image"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="-40dp"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/icon_back" />

                <ImageView
                    android:id="@+id/imgRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/image"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-40dp"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/icon_delete"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/layout2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#fafafa"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13dp"
                            android:text="Taka"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTaka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/icon_taka"
                            android:gravity="center"
                            android:hint=" 2500"
                            android:textColor="@color/color2"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Group"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:hint="Toma"
                            android:textColor="@color/color2"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layout3"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lay1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Name*"
                        android:textColor="@color/offWhite"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"/>

                    <EditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/offWhite"
                        android:paddingLeft="7dp"
                        android:hint="name"
                        android:inputType="textPersonName"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/lay1"
                    android:id="@+id/lay4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Email*"
                        android:textColor="@color/offWhite"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"/>

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/offWhite"
                        android:paddingLeft="7dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textSize="15dp"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/lay4"
                    android:id="@+id/lay2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Phone number*"
                        android:textColor="@color/offWhite"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"/>

                    <TextView
                        android:id="@+id/txtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/offWhite"
                        android:paddingLeft="7dp"
                        android:hint="phone number"
                        android:inputType="phone"
                        android:gravity="start"
                        android:paddingTop="2dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/lay2"
                    android:id="@+id/lay3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Address*"
                        android:textColor="@color/offWhite"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"/>

                    <EditText
                        android:id="@+id/gAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/offWhite"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/lay3"
                    android:id="@+id/lay6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Favourite word*"
                        android:textColor="@color/offWhite"
                        android:layout_below="@id/lay3"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="7dp"/>

                    <EditText
                        android:id="@+id/fWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:backgroundTint="@color/offWhite"
                        android:clickable="false"
                        android:hint="favourite word"
                        android:inputType="textPersonName"
                        android:paddingLeft="7dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/gDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@id/gDescription"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/icon_bold"
                        android:drawablePadding="5dp"
                        android:paddingLeft="5dp"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
