<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    app:cardCornerRadius="7dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp">

           <TextView
               android:id="@+id/txtName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginTop="13dp"
               android:gravity="start"
               android:hint="member name"
               android:textSize="18dp"
               android:textColor="@color/color2"/>

           <TextView
               android:id="@+id/txtDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginTop="10dp"
               android:layout_toStartOf="@+id/bOk"
               android:gravity="start"
               android:hint="current date"
               android:textSize="15dp"
               android:textColor="@color/black"/>

           <ImageView
               android:id="@+id/bEdit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="12dp"
               android:clickable="true"
               android:src="@drawable/icon_edit"
               android:tint="@color/color2" />

       </RelativeLayout>

       <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/txtDate"
           android:layout_marginLeft="12dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="15dp"
           android:orientation="horizontal"
           android:padding="5dp">

           <TextView
               android:id="@+id/text1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="2"
               android:gravity="center"
               android:text="Break fast"
               android:textSize="17dp"
               android:inputType="number"/>

           <TextView
               android:id="@+id/text2"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:text="Lunch"
               android:textSize="17dp"
               android:inputType="number"/>

           <TextView
               android:id="@+id/text3"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:text="Dinner"
               android:textSize="17dp"
               android:inputType="number"/>


           <TextView
               android:id="@+id/text4"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:text="Total"
               android:textSize="17dp"
               android:inputType="number"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/linear2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/txtDate"
           android:layout_marginLeft="12dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="3dp"
           android:layout_marginBottom="8dp"
           android:orientation="horizontal"
           android:padding="5dp">

           <TextView
               android:id="@+id/eBreakfast"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="2"
               android:gravity="center"
               android:hint="Break fast"
               android:textSize="17dp"
               android:inputType="number"/>

           <TextView
               android:id="@+id/eLunch"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:hint="Lunch"
               android:textSize="17dp"
               android:inputType="number"/>

           <TextView
               android:id="@+id/eDinner"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:hint="Dinner"
               android:textSize="17dp"
               android:inputType="number"/>


           <TextView
               android:id="@+id/eTotal"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtName"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/txtDate"
               android:layout_weight="1"
               android:gravity="center"
               android:hint="Total"
               android:textSize="17dp"
               android:inputType="number"/>
       </LinearLayout>

   </LinearLayout>

</android.support.v7.widget.CardView>
